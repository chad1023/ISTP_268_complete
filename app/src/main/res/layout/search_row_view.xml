<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="type2"
        android:id="@+id/type2Text"
        android:layout_alignTop="@+id/type1Text"
        android:layout_toRightOf="@+id/type1Text"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="type1"
        android:id="@+id/type1Text"
        android:layout_alignBottom="@+id/listImg"
        android:layout_alignLeft="@+id/nameText"
        android:layout_alignStart="@+id/nameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="hpVal"
        android:id="@+id/hpText"
        android:layout_alignTop="@+id/nameText"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/nameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="name"
        android:id="@+id/nameText"
        android:layout_alignTop="@+id/listImg"
        android:layout_toRightOf="@+id/listImg" />

    <ImageView
        android:id="@+id/listImg"
        android:src="@drawable/unknown"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="30dp" />

</RelativeLayout>